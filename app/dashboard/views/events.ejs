<% layout('layout-main') -%>
<script src="<%= route_path %>/javascripts/ejs.min.js"></script>
<h1>
  Latest events
</h1>
<div id="events">
  <%- partial('_events', { url: '/api/pings/events' }) %>
</div>
<div id="welcome" style="display: none">
<p>Welcome to Uptime, the web monitoring application.</p>
<p>To begin, <a href="<%= route_path %>/checks/new">create your first check</a>.</p>
</div>
<script>
$(document).ready(function() {
  $('.navbar-inner li').eq(0).addClass('active');
  $.getJSON('/api/checks/count', function(nbChecks) {
    if (nbChecks.total == 0) {
      $('#events').hide();
      $('h1').hide();
      $('#welcome').show();
    };
  });
});
</script>
