<script src="/httpOptions/javascripts/jquery.autoresize.js"></script>

<div class="form-group">
  <label for="textareaHTTPOptions">HTTP Options</label>
  <p class="help-block">See the
      <% if (check.type === "http") { %>
      <a target="_blank" href="http://nodejs.org/api/http.html#http_http_request_options_callback">Node.js HTTP
      <% } else { %>
      <a target="_blank" href="http://nodejs.org/api/https.html#https_https_request_options_callback">Node.js HTTPS
      <% } %>
      documentation</a> for a list of available options.
  </p>
  <textarea 
    name="check[http_options]" 
    id="textareaHTTPOptions"
    class="form-control" 
    rows="3" cols="30" 
    placeholder="Use YAML format, e.g method: HEAD"/><%= check.getPollerParam('http_options') || '' %></textarea>
</div>

<script>
jQuery(function($) {
  $('#check_form textarea[name="check[http_options]"]').autoResize();
});
</script>